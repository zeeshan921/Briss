{% if effect_style == "parallax" %}
  
  <script>
    function initAnimatedText() {
      window.addEventListener('scroll', function() {
        var scrolled = window.scrollY;
        var newPosition = {% if flip_effect %}-{% endif %}scrolled / {{ effect_speed | times: 0.2 }} + 'px';
        var elements = document.querySelectorAll('.animate-parallax-{{ section.id }}');
        elements.forEach(el => {
          el.style.backgroundPosition = {% if effect_direction == "vertical" %}'left ' + newPosition {% else %}newPosition + 'top'{% endif %};
        })
      });
    }
  
    document.addEventListener('DOMContentLoaded', initAnimatedText);
    
    if (Shopify.designMode) {
       document.addEventListener('shopify:section:unload', initAnimatedText);
       document.addEventListener('shopify:section:load', initAnimatedText);
    }
  </script>

{% endif %}

